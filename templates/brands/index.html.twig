{% extends 'base.html.twig' %}

{% block title %}Brands index{% endblock %}

{% block body %}
    <h1>Brands index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Website</th>
                <th>Desription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>{{ brand.website }}</td>
                <td>{{ brand.desription }}</td>
                <td>
                    <a href="{{ path('app_brands_show', {'id': brand.id}) }}">show</a>
                    <a href="{{ path('app_brands_edit', {'id': brand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_brands_new') }}">Create new</a>
{% endblock %}
