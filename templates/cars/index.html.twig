{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <h1>All Cars </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td><a href="{{ path('app_cars_show', {'id': car.id}) }}">{{ car.name }}</a></td>
                <td>{{ car.address }}</td>
                <td>
                    <a href="{{ path('app_cars_show', {'id': car.id}) }}">show

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_cars_edit', {'id': car.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cars_new') }}">Create new</a>
{% endblock %}
