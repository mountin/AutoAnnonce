    {#{% for product in products %}#}
        {#{% for pr in product %}#}
            {#{{ pr.name }}#}
        {#<li>{{ pr.name }} (Brand: {{ pr.brand.name }})</li>#}
        {#{% endfor %}#}
        {#{{ product.name }}#}
