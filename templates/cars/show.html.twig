{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}
    <h1>Cars</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ car.address }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('/uploads/images/' ~ car.imageName) }}" alt="Product Image"><br/>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cars_index') }}">back to list</a>

    <a href="{{ path('app_cars_edit', {'id': car.id}) }}">edit</a>

    {{ include('cars/_delete_form.html.twig') }}
{% endblock %}
